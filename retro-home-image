    usage
    exit 0
else
    while [ $# -gt 0 ]; do
        case "${1}" in
            -device|--device)
                REMIX="${2}"
                shift
                shift;;
            *)
                echo "[!] ERROR: \"${1}\" is not a supported parameter."
                usage
                exit 1;;
        esac
    done
fi

